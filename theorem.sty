\ProvidesPackage{mytheorems}[2024/07/29 v1.1 Package to define theorem environments with white backgrounds]

% Load required packages
\RequirePackage{mdframed}
\RequirePackage{thmtools}
\RequirePackage{xcolor}

% Define theorem styles

% Style for definitions with white background
\declaretheoremstyle[
    headfont=\bfseries\sffamily\color{black}, 
    bodyfont=\normalfont, 
    mdframed={
        linewidth=1pt,
        roundcorner=5pt,
        backgroundcolor=white,
        linecolor=black,
        innertopmargin=10pt,
        innerbottommargin=10pt,
        innerrightmargin=10pt,
        innerleftmargin=10pt,
        skipabove=10pt,
        skipbelow=10pt
    }
]{thmgreenbox}

% Style for theorems and corollaries with white background
\declaretheoremstyle[
    headfont=\bfseries\sffamily\color{black}, 
    bodyfont=\normalfont, 
    mdframed={
        linewidth=1pt,
        roundcorner=5pt,
        backgroundcolor=white,
        linecolor=black,
        innertopmargin=10pt,
        innerbottommargin=10pt,
        innerrightmargin=10pt,
        innerleftmargin=10pt,
        skipabove=10pt,
        skipbelow=10pt
    }
]{thmredbox}

% Style for examples with white background
\declaretheoremstyle[
    headfont=\bfseries\sffamily\color{black}, 
    bodyfont=\normalfont, 
    mdframed={
        linewidth=1pt,
        roundcorner=5pt,
        backgroundcolor=white,
        linecolor=black,
        innertopmargin=10pt,
        innerbottommargin=10pt,
        innerrightmargin=10pt,
        innerleftmargin=10pt,
        skipabove=10pt,
        skipbelow=10pt
    }
]{thmbluebox}

% Define theorem environments
\declaretheorem[numberwithin=chapter, style=thmgreenbox, name=Definition]{definition}
\declaretheorem[sibling=definition, style=thmredbox, name=Theorem]{theorem}
\declaretheorem[sibling=definition, style=thmredbox, name=Corollary]{corollary}
\declaretheorem[sibling=definition, style=thmbluebox, name=Example]{example}


